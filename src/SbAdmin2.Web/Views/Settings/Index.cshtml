
@{
    ViewData["Title"] = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-6">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                Custom Background Gradient Utilities
            </h6>
        </div>
        <div class="card-body">
            <div id="primary" class="change-color px-3 py-5 bg-gradient-primary text-white">.bg-gradient-primary</div>
            <div id="secondary" class="change-color px-3 py-5 bg-gradient-secondary text-white">.bg-gradient-secondary</div>
            <div id="success" class="change-color px-3 py-5 bg-gradient-success text-white">.bg-gradient-success</div>
            <div id="info" class="change-color px-3 py-5 bg-gradient-info text-white">.bg-gradient-info</div>
            <div id="warning" class="change-color px-3 py-5 bg-gradient-warning text-white">.bg-gradient-warning</div>
            <div id="danger" class="change-color px-3 py-5 bg-gradient-danger text-white">.bg-gradient-danger</div>
            <div id="light" class="change-color px-3 py-5 bg-gradient-light text-white">.bg-gradient-light</div>
            <div id="dark" class="change-color px-3 py-5 bg-gradient-dark text-white">.bg-gradient-dark</div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(function () {
            $('.change-color').on('click', function () {
                var newBgColor = 'bg-gradient-' + this.id;
                $("#accordionSidebar").removeAttr('class');
                $('#accordionSidebar').addClass("navbar-nav sidebar sidebar-dark accordion " + newBgColor);
            });
        });
    </script>
}