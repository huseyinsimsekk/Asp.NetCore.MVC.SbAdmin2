@model IEnumerable<Alert>
@{
    ViewData["Title"] = "Alerts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="card-text">
            <ol>
                @foreach (var item in Model)
                {
                    <li>
                        <a asp-controller="Alert" asp-action="Detail" asp-route-id="@item.Id">@item.Title</a>
                    </li>
                }
            </ol>
        </div>
    </div>
</div>

